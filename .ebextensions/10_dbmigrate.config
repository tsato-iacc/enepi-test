container_commands:
  01_migrate:
    command: "cd /var/app/ondeck && php oil refine migrate -all"
    leader_only: true
  02_fix_permission:
    command: "cd /var/app/ondeck && chown -R webapp:webapp ."
  03_composer_install:
    command: "cd /var/app/ondeck && php -dmemory_limit=750M ./composer.phar install --no-ansi --no-interaction --no-dev"
